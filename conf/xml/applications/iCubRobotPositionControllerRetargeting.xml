<application>

  <name>iCub Retargeting Position Controller</name>
  <description>visualization and control of iCub using Xsens retargeted data</description>
  <version>1.0</version>
  <authors>
    <author email="lorenzo.rapetti@iit.it">Lorenzo Rapetti</author>
  </authors>

  <!-- Devices -->

  <module>
    <name>yarprobotinterface</name>
    <parameters>--config TransformServer.xml</parameters>
    <node>icub30</node>
  </module>

  <module>
    <name>yarprobotinterface</name>
    <parameters>--config RobotStateProvider_iCub.xml</parameters>
    <node>icub30</node>
  </module>

  <module>
    <name>yarprobotinterface</name>
    <parameters>--config RobotPositionController_iCub.xml</parameters>
    <node>icub30</node>
  </module>
  
  <module>
      <name>yarprobotstatepublisher</name>
      <parameters> --period 0.01 --tf-prefix /iCub/ --model teleoperation_iCub_model_V_2_5.urdf --reduced-model true --base-frame root_link_fake --jointstates-topic "/iCub/joint_states"</parameters>
      <node>icub30</node>
  </module>

  <module>
      <name>roslaunch</name>
      <parameters>HDERviz iCubRviz.launch</parameters>
      <node>icub30</node>
  </module>

</application>